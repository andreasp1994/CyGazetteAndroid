<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/feed_bg"
    android:orientation="vertical"
    tools:context="com.apogiatzis.cygazetteapp.FeedActivity">

    <!--Top bar -->
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/user128x128"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvUser"
                android:textColor="#f1f1f1"
                android:textSize="18sp"
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="13sp"
                android:text="cited:"
                android:textColor="#f1f1f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/shadow_border"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/ivCitation"
            android:scaleType="fitXY"
            android:src="@drawable/gazette_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <ImageView
            android:src="@drawable/thumbs_up"
            android:layout_marginRight="20dp"
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/thumbs_down"
            android:layout_width="25dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLikes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="10"
                android:textColor="#f1f1f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#f1f1f1"
                android:text="LIKES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDislikes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="37"
                android:textColor="#f1f1f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#f1f1f1"
                android:text="DISLIKES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvComments"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="6"
                android:textColor="#f1f1f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#f1f1f1"
                android:text="COMMENTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:id="@+id/llComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Line break -->
        <LinearLayout
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

</LinearLayout>