<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Main Layout-->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#395373"
        android:layout_height="match_parent">

        <!--Top bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <!-- Change font for sure-->
                <TextView
                    android:textSize="25sp"
                    android:textColor="#f1f1f1"
                    android:textStyle="bold"
                    android:text="Read Gazette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivMenu"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/menu"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <!-- Gazette parts-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--TMHMA A-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:id="@+id/llSectionTmhmaA"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#f64c73">


                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/mouse"
                                android:layout_marginRight="10dp"
                                android:id="@+id/ivSectionIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <TextView
                                android:id="@+id/tvSectionName"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="TMHMA A"
                                android:textColor="#f1f1f1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="#f1f1f1"
                            android:paddingRight="30dp"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:text="Πρόεδρος, Διορισμοί, Προαγωγές, Αφυπηρετήσεις, Κενές Θέσεις, Υποτροφίες, Εξετάσεις, κ.λ.π."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="10"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="FOLLOWERS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="37"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="CITATIONS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="6"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="NEW ISSUES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/menu_dots"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>


                <!--TMHMA B-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:id="@+id/llSectionTmhmaB"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#1fcbb5">


                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/pie_chart"
                                android:layout_marginRight="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <TextView
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="TMHMA B"
                                android:textColor="#f1f1f1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="#f1f1f1"
                            android:paddingRight="30dp"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:text="Διάφορα"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="10"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="FOLLOWERS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="37"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="CITATIONS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="6"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="NEW ISSUES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/menu_dots"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>


                <!--TMHMA C-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <LinearLayout
                        android:id="@+id/llSectionTmhmaC"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#c873f4">


                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/offer_label"
                                android:layout_marginRight="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />

                            <TextView
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="TMHMA C"
                                android:textColor="#f1f1f1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="#f1f1f1"
                            android:paddingRight="30dp"
                            android:gravity="center"
                            android:paddingLeft="30dp"
                            android:text="Προσφορές"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="10"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="FOLLOWERS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="37"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="CITATIONS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="6"
                                    android:textColor="#f1f1f1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#f1f1f1"
                                    android:text="NEW ISSUES"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/menu_dots"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- The navigation drawer -->
    <LinearLayout android:id="@+id/left_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#395373"
        android:layout_gravity="start" >

        <ImageView
            android:src="@drawable/appicon256x256"
            android:padding="40dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />


        <TextView
            android:textSize="18sp"
            android:id="@+id/menuFeed"
            android:gravity="center"
            android:background="#577eaf"
            android:textColor="#f1f1f1"
            android:textStyle="bold"
            android:text="Feed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:textSize="18sp"
            android:id="@+id/menuSearch"
            android:gravity="center"
            android:background="#577eaf"
            android:textColor="#f1f1f1"
            android:textStyle="bold"
            android:text="Search"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/menuProfile"
            android:gravity="center"
            android:background="#577eaf"
            android:textColor="#f1f1f1"
            android:textStyle="bold"
            android:text="Profile"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
